{
	"manifest_version": 3,
	"name": "CopyBleach",
	"version": "1.0",
	"description": "A Chrome extension to modify clipboard content on paste.",
	"permissions": [
		"clipboardRead",
		"clipboardWrite",
		"scripting",
		"activeTab",
		"tabs"
	],
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "popup.html"
	},
	"host_permissions": ["<all_urls>"]
}
